/*CONTROL*/
void control ():
{ }
{
	conditional() | loop() | repeat()
}

/*CONDICIONALES*/
void conditional ():
{ }
{
	<IF> ":" condition() <THEN> ":" blocks() <ELSE> ":" blocks() 
}

void condition ():
{}
{
	facing()
|	canput()
|	canpick()
|	canmoveindir()
|	canjumpindir()
|	canmovetothe()
|	canjumptothe()
|	not()
}

void facing ():
{}
{
	<FACING> ":" (<NORTH>|<SOUTH>|<EAST>|<WEST>)	
}

