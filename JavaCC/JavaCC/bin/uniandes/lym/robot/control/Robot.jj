void s0 ():
{}
{
	< INIT > (body())?

}

void X ():
{}
{
	(< NAME >|< NUM >)
}
void DIR ():
{}
{
	(< FRONT >|< RIGHT>|< LEFT >|< BACK >)
}
void OTN ():
{}
{
	(< NORTH >|< SOUTH >|< EAST >|< WEST >)
}
void OBJ ():
{}
{
	(< BALLOONS >|< CHIPS >)
}
void D ():
{}
{
	(< LEFT >|< RIGHT >|< AROUND >)
}

void body ():
{}
{
  vars() procs() blocks()
}

void vars ():
{ }
{
	< VARS > < NAME >(","< NAME >)* ";"
}

void procs ():
{ }
{
	< PROCS > (definition())*
	
}

void definition():
{}
{
  < NAME >"[" "|" (params())* "|" instructions() "]"
}

void params ():
{ }
{
	< NAME >(","< NAME >)* 
}

void instructions ():
{ }
{
	(commands()|control()|call())(";"(commands()|control()|call()))*
}

void blocks ():
{ }
{
	"[" instructions() "]"
}

