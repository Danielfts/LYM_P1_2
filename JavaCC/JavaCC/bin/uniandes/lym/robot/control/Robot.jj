}

void not():
{}
{
	<NOT> ":" condition()
}


void loop ():
{ }
{
	<WHILE> ":" condition() <DO> ":" blocks()
}

void repeat ():
{ }
{
	<REPEAT> ":" X() blocks()
}

void call ():
{ }
{
	< NAME > ":" args() 
}

void args():
{}
{
  	X()(","X())*
}
